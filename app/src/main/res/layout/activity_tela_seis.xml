<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelaSeis">
    <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="528dp"
            android:layout_height="76dp"
            android:background="@color/black"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/materialToolbar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Inicio"
            android:onClick="inicio"
            android:layout_width="79dp"
            android:layout_height="61dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/bt6"
            app:layout_constraintHorizontal_bias="0.003" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.006"
            android:textColor="#FAFAFA" android:fontFamily="serif" android:backgroundTint="@color/black"
            android:textSize="10sp" android:textAlignment="center"/>
    <Button
            android:text="Sobre"
            android:onClick="sobre"
            android:layout_width="91dp"
            android:layout_height="65dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/bt7"
            app:layout_constraintHorizontal_bias="0.25" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.004"
            android:textColor="#FAFAFA" android:fontFamily="serif" android:backgroundTint="@color/black"
            android:textSize="10sp" android:textAlignment="center"/>
    <Button
            android:text="Contato"
            android:onClick="contato"
            android:layout_width="105dp"
            android:layout_height="58dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/bt8"
            app:layout_constraintHorizontal_bias="0.558" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.009"
            android:textColor="#FAFAFA" android:fontFamily="serif" android:backgroundTint="@color/black"
            android:textSize="10sp"/>
    <Button
            android:text="Planos"
            android:onClick="plano"
            android:layout_width="86dp"
            android:layout_height="58dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/bt9"
            app:layout_constraintHorizontal_bias="0.851" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.008"
            android:textColor="#FAFAFA" android:fontFamily="serif" android:backgroundTint="@color/black"
            android:textSize="10sp"/>

    <View android:id="@+id/containerLogin"
          android:layout_width="425dp"
          android:layout_height="427dp"
          android:background="@drawable/conteine_login"
          android:layout_marginHorizontal="20dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entre em contato"
            android:onClick="telaquatro"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@id/containerLogin"
            app:layout_constraintStart_toStartOf="@id/containerLogin"
            app:layout_constraintEnd_toEndOf="@id/containerLogin"
            android:fontFamily="serif" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.01"/>
    <EditText
            android:id="@+id/editNome1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/idit_login_text"
            android:padding="15dp"
            android:inputType="text"
            android:maxLines="1"
            android:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="408dp"
            tools:layout_editor_absoluteX="-11dp" android:textStyle="italic"
            app:layout_constraintTop_toTopOf="@+id/containerLogin" app:layout_constraintVertical_bias="0.333"/>
    <EditText
            android:id="@+id/editEmail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email ou Telefone "
            android:layout_marginHorizontal="40dp"
            app:layout_constraintStart_toStartOf="@id/containerLogin"
            app:layout_constraintEnd_toEndOf="@id/containerLogin"
            android:background="@drawable/idit_login_text"
            android:padding="15dp"
            android:inputType="text"
            android:maxLines="1"
            android:fontFamily="serif" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="328dp" android:textStyle="italic"
            app:layout_constraintTop_toTopOf="@+id/containerLogin" app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintVertical_bias="0.445"/>
    <EditText
            android:id="@+id/editMensagem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mensagem"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintStart_toStartOf="@id/containerLogin"
            app:layout_constraintEnd_toEndOf="@id/containerLogin"
            android:background="@drawable/idit_login_text"
            android:padding="15dp"
            android:inputType="textMultiLine"
            android:layout_marginVertical="10dp"
            android:maxLines="1"
            android:fontFamily="serif" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.323" android:textStyle="italic"
            app:layout_constraintHorizontal_bias="0.489" app:layout_constraintTop_toTopOf="@+id/containerLogin"/>
    <TextView
            android:text="Enviar Mensagem"
            android:onClick="enviar1"
            android:fontFamily="serif"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="252dp"
            android:layout_height="31dp" android:id="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.662"
            android:textAlignment="center"/>



</androidx.constraintlayout.widget.ConstraintLayout>